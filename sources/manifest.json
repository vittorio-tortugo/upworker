{
  "manifest_version": 2,

  "name": "Upworker",
  "description": "Simple extension to do your work on Upwork easier",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "author": "Victor Orlov",
  "version" : "0.2.2",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "https://*.upwork.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.upwork.com/*"],
      "js": ["content_script.js"]
    }
  ]
}
